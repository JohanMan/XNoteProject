<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ApplicationTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/theme_bar_color</item>  
        <item name="colorPrimaryDark">@color/theme_bar_color</item>
        <item name="android:windowBackground">@color/theme_background_color</item>
    </style>
    
    <style name="FullscreenTheme" parent="Theme.AppCompat.NoActionBar">
	    <item name="android:windowFullscreen">true</item>
	    <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
	</style>
	
    <style name="CustomDialogAnimStyle">
		<item name="android:windowEnterAnimation">@anim/anim_custom_dialog_in</item>        <!-- 指定显示的动画xml  -->
	    <item name="android:windowExitAnimation">@anim/anim_custom_dialog_out</item>       <!-- 指定消失的动画xml  -->
	</style>
	
    <style name="SlideUpDialogAnimStyle">
		<item name="android:windowEnterAnimation">@anim/anim_slideup_donw_to_up</item>        <!-- 指定显示的动画xml  -->
	    <item name="android:windowExitAnimation">@anim/anim_slideup_up_to_down</item>       <!-- 指定消失的动画xml  -->
	</style>
	
    <style name="SlideDownDialogAnimStyle">
		<item name="android:windowEnterAnimation">@anim/anim_slidedown_up_to_down</item>        <!-- 指定显示的动画xml  -->
	    <item name="android:windowExitAnimation">@anim/anim_slidedown_donw_to_up</item>       <!-- 指定消失的动画xml  -->
	</style>
    
    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item> 
        <item name="android:windowNoTitle">true</item>  
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimStyle</item>
    </style>

</resources>
