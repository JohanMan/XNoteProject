<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        >
        
        <ImageView 
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/logo"
            android:layout_centerInParent="true"
            />
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingRight="@dimen/layout_padding"
        >
        
        <EditText 
	        android:id="@+id/login_phone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:inputType="phone"
	        android:padding="5dp"
	        android:hint="手机"
	        android:textColor="@color/theme_text_color"
	        android:textColorHint="@color/theme_hint_color"
	        android:textSize="@dimen/text_size"
	        android:background="@color/theme_background_color"
	        />
	    
	    <View 
	        android:layout_width="wrap_content"
	        android:layout_height="0.5dp"
	        android:background="@color/theme_driver_color"
	        android:layout_marginBottom="10dp"
	        android:layout_marginTop="10dp"
	        />
	    
	    <EditText 
	        android:id="@+id/login_pd"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:inputType="textPassword"
	        android:padding="5dp"
	        android:hint="密码"
	        android:textColor="@color/theme_text_color"
	        android:textColorHint="@color/theme_hint_color"
	        android:textSize="@dimen/text_size"
	        android:background="@color/theme_background_color"
	        />
	    
	    <View 
	        android:layout_width="wrap_content"
	        android:layout_height="0.5dp"
	        android:background="@color/theme_driver_color"
	        android:layout_marginBottom="60dp"
	        android:layout_marginTop="10dp"
	        />
	    
	    <Button 
	        android:id="@+id/login_but"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/but_height"
	        android:textColor="@color/theme_background_color"
	        android:textSize="@dimen/title_size"
	        android:text="登 录"
	        android:background="@drawable/corner_theme_5"
	        />
	    
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:paddingBottom="@dimen/layout_padding"
	        >
	        
	        <TextView 
	            android:id="@+id/login_forget_pd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/theme_color"
	            android:textSize="14sp"
	            android:text="忘记密码"
	            android:layout_alignParentBottom="true"
	            android:clickable="true"
	            />
	        
	        <TextView 
	            android:id="@+id/login_register"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/theme_color"
	            android:textSize="14sp"
	            android:text="新用户"
	            android:layout_alignParentBottom="true"
	            android:layout_alignParentRight="true"
	            android:clickable="true"
	            />
	        
	    </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>
