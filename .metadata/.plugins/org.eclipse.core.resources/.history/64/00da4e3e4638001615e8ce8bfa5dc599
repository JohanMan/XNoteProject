package com.johan.xnote.app.dialog;

import com.johan.xnote.R;

import android.app.Dialog;
import android.content.Context;

public class ShowAccountBarDialog {

	private Context context;
	
	private Dialog showDialog;
	
	public ShowAccountBarDialog(Context context) {
		this.context = context;
		showDialog = new Dialog(context, R.style.CustomDialog);
		showDialog.setContentView(R.layout.dialog_single_list);
		
	}

	public void show() {
		showDialog.show();
	}
	
	public void dismiss() {
		showDialog.dismiss();
	}
	
}
